<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.fragment.ActiveFragment">


    <LinearLayout
        android:id="@+id/ll_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/study_icon"
            />
        <CheckBox
            android:id="@+id/cb_time_start"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:button="@null"
            android:text="学习开始"
            android:textColor="@color/bg_app"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@color/colorAccent"
            />
        <CheckBox
            android:id="@+id/cb_time_end"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:button="@null"
            android:text="学习结束"
            android:textColor="@color/bg_app"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_task"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="您今日一共学习了0秒"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#999999"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_time_show_text"
        />
    <LinearLayout
        android:id="@+id/ll_entertainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_time_show_text"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/play_icon"
            />
        <CheckBox
            android:id="@+id/cb_entertainment_start"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:button="@null"
            android:text="娱乐开始"
            android:textColor="@color/bg_app"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@color/colorAccent"
            />
        <CheckBox
            android:id="@+id/cb_entertainment_end"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:button="@null"
            android:text="娱乐结束"
            android:textColor="@color/bg_app"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_entertainment_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_entertainment"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="您今日一共娱乐了0秒"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#999999"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_entertainment_show_text"
        />
    <LinearLayout
        android:id="@+id/ll_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_entertainment_show_text"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/sleep_icon"
            />
        <CheckBox
            android:id="@+id/cb_sleep_start"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:button="@null"
            android:text="睡眠开始"
            android:textColor="@color/bg_app"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@color/colorAccent"
            />
        <CheckBox
            android:id="@+id/cb_sleep_end"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:button="@null"
            android:text="睡眠结束"
            android:textColor="@color/bg_app"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_sleep_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_sleep"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="您今日一共睡眠了0秒"
        />

</RelativeLayout>